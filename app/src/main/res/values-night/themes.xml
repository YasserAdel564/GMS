<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.GMS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/almarai_regular</item>
    </style>
    <style name="spinnerStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/purple</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="playerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:keepScreenOn">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/purple</item>
        <item name="colorAccent">@color/purple</item>
        <item name="fontFamily">@font/almarai_regular</item>
    </style>
</resources>